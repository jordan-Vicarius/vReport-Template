# Evidence Project Template Environment Configuration
# Copy this file to .env and update the values for your project

# Project Configuration
PROJECT_NAME=my-evidence-project
PROJECT_VERSION=0.0.1
CONTAINER_NAME=evidence-dashboard

# Port Configuration
EVIDENCE_PORT=8080
NGINX_PORT=80

# Database Configuration (choose one)
# SQLite (default - no additional config needed)
# DATABASE_TYPE=sqlite

# PostgreSQL
# DATABASE_TYPE=postgres
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=evidence_db
# POSTGRES_USER=evidence_user
# POSTGRES_PASSWORD=your_password

# MySQL
# DATABASE_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=evidence_db
# MYSQL_USER=evidence_user
# MYSQL_PASSWORD=your_password

# SQL Server
# DATABASE_TYPE=mssql
# MSSQL_HOST=localhost
# MSSQL_PORT=1433
# MSSQL_DATABASE=evidence_db
# MSSQL_USER=evidence_user
# MSSQL_PASSWORD=your_password

# Snowflake
# DATABASE_TYPE=snowflake
# SNOWFLAKE_ACCOUNT=your_account
# SNOWFLAKE_WAREHOUSE=your_warehouse
# SNOWFLAKE_DATABASE=your_database
# SNOWFLAKE_SCHEMA=your_schema
# SNOWFLAKE_USER=your_user
# SNOWFLAKE_PASSWORD=your_password

# BigQuery
# DATABASE_TYPE=bigquery
# BIGQUERY_PROJECT_ID=your_project_id
# BIGQUERY_DATASET=your_dataset
# BIGQUERY_KEY_FILE=path/to/service-account.json

# Timezone
TZ=UTC
